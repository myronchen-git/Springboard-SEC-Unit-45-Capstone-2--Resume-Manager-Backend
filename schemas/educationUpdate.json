{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/schemas/education-update.json",

  "title": "Update Education",
  "description": "Allowed info for updating an education.",

  "type": "object",
  "additionalProperties": false,
  "anyOf": [
    { "title": "school name", "required": ["school"] },
    { "title": "school location", "required": ["location"] },
    { "title": "start date", "required": ["startDate"] },
    { "title": "end date", "required": ["endDate"] },
    { "title": "degree", "required": ["degree"] },
    { "title": "gpa", "required": ["gpa"] },
    { "title": "awards and honors", "required": ["awardsAndHonors"] },
    { "title": "activities", "required": ["activities"] }
  ],

  "properties": {
    "school": {
      "type": "string",
      "minLength": 2,
      "maxLength": 500,
      "examples": ["University of California, Los Angeles"]
    },
    "location": {
      "type": "string",
      "minLength": 2,
      "maxLength": 500,
      "examples": [
        "123 Main St., City, State 11111",
        "123 Main Street, Apartment 2, New York, NY 10001, USA",
        "5 Oxford Street, London, WC1A 1DP, United Kingdom",
        "2-1-1 Shinjuku, Shinjuku-ku, Tokyo, 160-0022, Japan",
        "Lindenstra√üe 5, 10969 Berlin, German"
      ]
    },
    "startDate": {
      "type": "string",
      "pattern": "^\\d{4}\\-(0?[1-9]|1[012])\\-(0?[1-9]|[12][0-9]|3[01])$",
      "examples": ["2000-01-01"]
    },
    "endDate": {
      "type": "string",
      "pattern": "^\\d{4}\\-(0?[1-9]|1[012])\\-(0?[1-9]|[12][0-9]|3[01])$",
      "examples": ["2000-01-01"]
    },
    "degree": {
      "type": "string",
      "minLength": 2,
      "maxLength": 200,
      "examples": [
        "Bachelor of Science in Computer Science",
        "B.S. Computer Science"
      ]
    },
    "gpa": {
      "type": "string",
      "minLength": 2,
      "maxLength": 20,
      "examples": ["4.0 / 4.0", "10 / 10"]
    },
    "awardsAndHonors": {
      "type": "string",
      "minLength": 2,
      "examples": [
        "Honor Roll",
        "Dean's List",
        "Student of the Year, National Merit Scholar"
      ]
    },
    "activities": {
      "type": "string",
      "minLength": 2,
      "examples": [
        "student government",
        "basketball",
        "book club, student council"
      ]
    }
  },

  "examples": [
    {
      "school": "University 01"
    },
    {
      "school": "University of California, Los Angeles",
      "location": "405 Hilgard Ave, Los Angeles, CA 90095",
      "startDate": "2000-01-01",
      "endDate": "2004-12-31",
      "degree": "B.S. Computer Science"
    },
    {
      "school": "University of California, Los Angeles",
      "location": "405 Hilgard Ave, Los Angeles, CA 90095",
      "startDate": "2000-01-01",
      "endDate": "2004-12-31",
      "degree": "B.S. Computer Science",
      "gpa": "4.0 / 4.0",
      "awardsAndHonors": "Dean's List",
      "activities": "student council"
    }
  ]
}
